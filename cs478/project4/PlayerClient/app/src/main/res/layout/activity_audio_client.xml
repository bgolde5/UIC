<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.bradleygolden.PlayerClient.AudioClient">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Clip"
        android:id="@+id/playClipBtn"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clipTxt"
        android:layout_below="@+id/playClipBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Enter a clip name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause Clip"
        android:id="@+id/pauseClipBtn"
        android:layout_below="@+id/clipTxt"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Clip"
        android:id="@+id/stopClipBtn"
        android:layout_below="@+id/pauseClipBtn"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resume Clip"
        android:id="@+id/resumeClipBtn"
        android:layout_below="@+id/stopClipBtn"
        android:layout_alignParentStart="true" />

</RelativeLayout>
